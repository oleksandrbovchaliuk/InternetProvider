@model IEnumerable<ElectronicShop.Employee>



<h2>Управління працівниками</h2>

<p>
    @Html.ActionLink("Додати нового", "Create")
</p>
<table class="table">
    <tr>
        <th>
            <p>Номер працівника</p>
        </th>
        <th>
            <p>Прізвище</p>
        </th>
        <th>
            <p>Імя</p>
        </th>
        <th>
            <p>Телефон</p>
        </th>
        <th>
            <p>Посада</p>
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.ID_Employee)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Surname)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.First_Name)
            </td>

            <td>
                @Html.DisplayFor(modelItem => item.Phone_Number)
            </td>

            <td>
                @Html.ActionLink("Змінити", "Edit", new { id = item.ID_Employee }) |
                @Html.ActionLink("Деталі", "Details", new { id = item.ID_Employee }) |
                @Html.ActionLink("Видалити", "Delete", new { id = item.ID_Employee })
            </td>
        </tr>
    }

</table>
